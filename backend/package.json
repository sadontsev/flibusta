{
  "name": "flibusta-backend",
  "version": "1.0.0",
  "description": "Modern Node.js backend for Flibusta library system",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && tsc -p public/tsconfig.frontend.json && node scripts/stamp-assets.js",
    "build:stamp": "node scripts/stamp-assets.js",
    "build:frontend": "tsc -p public/tsconfig.frontend.json",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js,.mjs,.cjs",
  "lint:fix": "eslint . --ext .ts,.js,.mjs,.cjs --fix",
    "type-check": "tsc --noEmit",
    "migrate": "ts-node src/database/migrate.ts",
    "init-superadmin": "ts-node src/database/init-superadmin.ts",
    "manage": "ts-node src/scripts/manage.ts"
  },
  "keywords": [
    "library",
    "books",
    "flibusta",
    "nodejs",
    "express"
  ],
  "author": "Flibusta Team",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "connect-pg-simple": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.18.6",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "rimraf": "^6.0.1",
    "glob": "^11.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
