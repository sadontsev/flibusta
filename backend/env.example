# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=flibusta
DB_USER=flibusta
DB_PASSWORD=flibusta123

# Server Configuration
PORT=3000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Superadmin Configuration
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=admin123
SUPERADMIN_EMAIL=admin@flibusta.local

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12

# Management Script Paths
SQL_PATH=/app/sql
BOOKS_PATH=/app/flibusta
CACHE_PATH=/app/cache
AUTHORS_CACHE_PATH=/app/cache/authors
COVERS_CACHE_PATH=/app/cache/covers
MAPPINGS_SQL_PATH=/app/sql/populate_book_mappings.sql

# Maintenance Scheduler
ENABLE_MAINTENANCE_SCHEDULER=true
TZ=UTC

# OPDS Configuration
OPDS_FEED_COUNT=100
